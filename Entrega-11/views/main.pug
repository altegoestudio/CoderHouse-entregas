extends layout

block partial 
  div.container
    div.formulario
      h2="ingrese producto"
      form(action="/api/productos/guardar" method="POST")
        div.mb-3
          label(for="input1" class="form-label")="Nombre"
          input(type="text" name="title" class="form-control" id="input1")
        div.mb-3
          label(for="input2" class="form-label")="Precio"
          input(type="text" name="price" class="form-control" id="input2")
        div.mb-3
          label(for="input3" class="form-label")="Foto URL"
          input(type="text" name="thumbnail" class="form-control" id="input3")
        div.d-grid.gap-2.brncontainer
          button(type="submit" class="btn btn-primary")="Enviar"
        
