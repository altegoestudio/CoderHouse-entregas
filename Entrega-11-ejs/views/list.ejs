<%- include('./layout')-%>


<div class="container">
  <div class="formulario">
    <div class="jumbotron">
      <h1>Vista de <%-titulo %></h1>
      <br>

      <% if (hayProductos){ %>
        <div class="table-responsive tabla">
            <table class="table table-dark">
                <tr> <th>Nombre</th> <th>Precio</th> <th>Foto</th></tr>
                <% productos.forEach( a => { %>
                  <tr> <td><%= a.title %></td> <td><%= a.price %></td> <td><img width="50" src=<%= a.thumbnail %> alt="Imagen no encontada"></td> </tr>
                <%});%>
            </table>
                <a href="/"><button type="submit" class="btn">  Volver</button></a>
        </div>
      <% } else{%>
        <h3 class="alert alert-warning">No se encontraron productos</h3>
        <a href="/"><button type="submit" class="btn">  Volver</button></a>
      <% }%>
    </div>
  </div>
</div>
